<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com"
  xmlns:xsi="http://www.w3.org"
  xmlns:bt="http://schemas.microsoft.com"
  xsi:type="MailApp">

	<Id>C7731517-476F-4DFF-A817-266D4EA86B66</Id>
	<Version>1.0.0.6</Version>
	<ProviderName>Sage X3</ProviderName>
	<DefaultLocale>en-US</DefaultLocale>
	<DisplayName DefaultValue="Sage X3 Outlook Add-in" />
	<Description DefaultValue="Sage X3 integration using Blazor WebAssembly." />

	<IconUrl DefaultValue="https://localhost:7102/addin/assets/icon-32.png" />
	<HighResolutionIconUrl DefaultValue="https://localhost:7102/addin/assets/icon-80.png" />
	<SupportUrl DefaultValue="https://localhost:7102" />

	<AppDomains>
		<AppDomain>https://localhost:7102</AppDomain>
	</AppDomains>

	<Hosts>
		<Host Name="Mailbox" />
	</Hosts>

	<Requirements>
		<Sets>
			<bt:Set Name="Mailbox" MinVersion="1.5" />
		</Sets>
	</Requirements>
	<FormSettings>
		<Form xsi:type="ItemRead">
			<DesktopSettings>
				<SourceLocation DefaultValue="https://localhost:7102/addin/taskpane.html" />
				<RequestedHeight>400</RequestedHeight>
			</DesktopSettings>
		</Form>
	</FormSettings>
	<Permissions>ReadWriteItem</Permissions>

	<Rule xsi:type="RuleCollection" Mode="Or">
		<Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
	</Rule>

	<DisableEntityHighlighting>false</DisableEntityHighlighting>

	<VersionOverrides xmlns="http://schemas.microsoft.com" xsi:type="VersionOverridesV1_0">
		<Requirements>
			<bt:Sets DefaultMinVersion="1.5">
				<bt:Set Name="Mailbox" />
			</bt:Sets>
		</Requirements>

		<Hosts>
			<Host xsi:type="MailHost">
				<DesktopFormFactor>
					<FunctionFile resid="commandsUrl" />

					<ExtensionPoint xsi:type="MessageReadCommandSurface">
						<OfficeTab id="TabDefault">
							<Group id="sageGroupRead">
								<bt:Label resid="groupLabel" />

					<!-- Ribbon Button for COMPOSE mode -->
					<ExtensionPoint xsi:type="MessageComposeCommandSurface">
						<OfficeTab id="TabDefault">
							<Group id="sageGroupCompose">
								<bt:Label resid="groupLabel" />
								<Control xsi:type="Button" id="openTaskPaneCompose">
									<Icon>
										<bt:Image size="16" resid="icon16" />
										<bt:Image size="32" resid="icon32" />
										<bt:Image size="80" resid="icon80" />
									</Icon>
									<Action xsi:type="ShowTaskpane">
										<SourceLocation resid="taskpaneUrl" />
									</Action>
								</Control>
							</Group>
						</OfficeTab>
					</ExtensionPoint>
				</DesktopFormFactor>
			</Host>
		</Hosts>

		<Resources>
			<bt:Images>
				<bt:Image id="icon16" DefaultValue="https://localhost:7102/addin/assets/icon-16.png" />
				<bt:Image id="icon32" DefaultValue="https://localhost:7102/addin/assets/icon-32.png" />
				<bt:Image id="icon80" DefaultValue="https://localhost:7102/addin/assets/icon-80.png" />
			</bt:Images>
			<bt:Urls>
				<bt:Url id="taskpaneUrl" DefaultValue="https://localhost:7102/addin/taskpane.html" />
				<bt:Url id="commandsUrl" DefaultValue="https://localhost:7102/addin/commands.html" />
			</bt:Urls>
			<bt:ShortStrings>
				<bt:String id="groupLabel" DefaultValue="Sage X3" />
				<bt:String id="buttonLabel" DefaultValue="Open Sage X3" />
				<bt:String id="buttonTitle" DefaultValue="Sage X3 Add-in" />
			</bt:ShortStrings>
			<bt:LongStrings>
				<bt:String id="buttonDescription" DefaultValue="Open the Sage X3 Blazor task pane." />
			</bt:LongStrings>
		</Resources>
</VersionOverrides>
</OfficeApp>